
<% if flash[:my_errors] %>
    <h4>Errors:</h4>
    <% flash[:my_errors].each do |error| %>
        <p><%= error %></p>
    <% end %>
<% end %>

<%= form_for @student do |f| %>
    <%= f.label :name %><br>
    <%= f.text_field :name %><br><br>

    <%= f.label :mod %><br>
    <%= f.number_field :mod %><br><br>

    <%= f.submit %>

<% end %>